<style>
	.social-links-section {
		padding: 1rem var(--sl-sidebar-pad-x);
		border-bottom: 1px solid var(--sl-color-gray-5);
		margin-bottom: 1rem;
	}
	
	.social-links {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}
	
	.social-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.5rem;
		border-radius: 0.375rem;
		text-decoration: none;
		color: var(--sl-color-text);
		transition: background-color 0.2s ease;
		font-size: 0.875rem;
	}
	
	.social-link:hover {
		background-color: var(--sl-color-accent-low);
		text-decoration: none;
		color: var(--sl-color-text);
	}
	
	.social-icon {
		flex-shrink: 0;
		opacity: 0.8;
	}
	
	.external-link {
		margin-left: auto;
		opacity: 0.6;
		flex-shrink: 0;
	}
	
	.social-link span {
		flex-grow: 1;
		font-weight: 500;
	}
</style>